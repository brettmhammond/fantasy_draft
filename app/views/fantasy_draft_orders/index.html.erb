<h4>Set Draft Order</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Fantasy Team</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fantasy_draft_orders.each do |fantasy_draft_order| %>
      <tr>
        <td><%= fantasy_draft_order.fantasy_team.name %></td>
        <td><%= fantasy_draft_order.position %></td>
        <td><%= link_to 'Edit', edit_fantasy_league_fantasy_draft_fantasy_draft_order_path(@fantasy_league, @fantasy_draft, fantasy_draft_order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>