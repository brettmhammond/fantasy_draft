<h1>Listing fantasy_leagues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fantasy_leagues.each do |fantasy_league| %>
      <tr>
        <td><%= fantasy_league.name %></td>
        <td><%= fantasy_league.password %></td>
        <td><%= link_to 'Show', fantasy_league %></td>
        <td><%= link_to 'Edit', edit_fantasy_league_path(fantasy_league) %></td>
        <td><%= link_to 'Destroy', fantasy_league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

