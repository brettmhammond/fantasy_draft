<!DOCTYPE html>
<html>
<head>
  <title>Fantasy Draft</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

      <div class="row-fluid">
          <div class="span12">
              <div id="board_logo">
                  <%= image_tag("nfl_logo.png")%>
              </div>
              <div id="board_name_default">
                <%= link_to 'Fantasy Draft', root_path %>

              </div>
          </div>
      </div>

      <div class="masthead">
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <ul class="nav">
                <li><%= link_to 'Fantasy Leagues', fantasy_leagues_path %></li>
                <li><%= link_to 'Teams', teams_path %></li>
                <li><%= link_to 'Schedule', schedules_path %></li>
                <li><%= link_to 'Byes', byes_path %></li>
                <li><%= link_to 'Players', players_path %></li>
                <li><%= link_to 'Positions', positions_path %></li>
                <li><%= link_to 'Rankings', player_ranks_path %></li>
                <li><%= link_to 'Projections', player_projections_path %></li>
                <li><%= link_to 'Values', player_auction_values_path %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

    <%= yield %>
</div>
</body>
</html>
